{
  "$id": "https://github.com/faraday-effect",
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Schema for JSON files that specify Nest-related entities",
  "type": "object",
  "required": [
    "name",
    "fields"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "namePlural": {
      "$comment": "Optional plural name; only necessary if automatic pluralization fails",
      "type": "string"
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "type",
          "description"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "oneOf": [
            {
              "simpleType": "string",
              "enum": [
                "string",
                "boolean"
              ]
            },
            {
              "dateType": "string",
              "enum": [
                "createdDate",
                "updatedDate"
              ]
            },
            {
              "primaryKey": "string"
            },
            {
              "foreignKey": "string"
            }
          ],
          "forCreate": {
            "type": "boolean",
            "default": true
          },
          "forUpdate": {
            "type": "boolean",
            "default": true
          },
          "forDatabase": {
            "type": "boolean",
            "default": true
          },
          "forGraphQL": {
            "type": "boolean",
            "default": true
          },
          "additionalProperties": false
        }
      }
    }
  }
}
