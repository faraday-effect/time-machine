{
  "$id": "https://github.com/faraday-effect",
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Schema for JSON files that specify entities and relationships",
  "type": "object",
  "required": ["entity"],
  "properties": {
    "entity": {
      "type": "object",
      "required": ["name", "pk"],
      "properties": {
        "name": {
          "type": "string"
        },
        "pk": {
          "type": "string"
        },
        "attributes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type", "description"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "text",
                  "boolean",
                  "integer",
                  "float",
                  "created",
                  "updated"
                ]
              },
              "description": {
                "type": "string"
              },
              "unique": {
                "type": "boolean"
              },
              "isDbColumn": {
                "type": "boolean"
              },
              "isGqlField": {
                "type": "boolean"
              },
              "forGqlCreate": {
                "type": "boolean"
              },
              "forGqlUpdate": {
                "type": "boolean"
              },
              "nullable": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "to", "type", "description"],
        "properties": {
          "name": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["oneToMany", "manyToOne", "manyToMany", "manyToManyOwner"]
          },
          "nullable": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}
